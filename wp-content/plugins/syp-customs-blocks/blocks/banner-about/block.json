{
  "apiVersion": 3,
  "name": "syp/products-pills",
  "title": "Products (Pills List)",
  "category": "sequoia-about",
  "icon": "portfolio",
  "description": "Heading + intro + lista de filas tipo pill con icono, título y descripción.",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "editorScript": "file:./edit.js",
  "render": "file:./render.php",
  "supports": {
    "html": false,
    "align": false,
    "color": {
      "background": false,
      "text": false,
      "link": false,
      "gradients": false
    },
    "spacing": { "padding": false, "margin": false },
    "typography": {
      "fontSize": false,
      "lineHeight": false,
      "fontStyle": false,
      "fontWeight": false,
      "letterSpacing": false,
      "textTransform": false
    }
  },
  "attributes": {
    "heading": { "type": "string", "default": "" },
    "intro": { "type": "string", "default": "" },
    "items": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "default": "" },
          "desc": { "type": "string", "default": "" },
          "iconUrl": { "type": "string", "default": "" },
          "variant": {
            "type": "string",
            "enum": ["light", "solid"],
            "default": "light"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
