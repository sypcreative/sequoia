{
  "apiVersion": 3,
  "name": "syp/why-sequoia",
  "title": "Why Sequoia (Accordion)",
  "category": "sequoia-home",
  "icon": "list-view",
  "description": "Título + texto introductorio con botón y un accordion repetidor.",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "editorScript": "file:./edit.js",
  "render": "file:./render.php",
  "supports": {
    "html": false,
    "align": false,
    "color": {
      "background": false,
      "text": false,
      "link": false,
      "gradients": false
    },
    "spacing": { "padding": false, "margin": false },
    "typography": {
      "fontSize": false,
      "lineHeight": false,
      "fontStyle": false,
      "fontWeight": false,
      "letterSpacing": false,
      "textTransform": false
    }
  },
  "attributes": {
    "heading": { "type": "string", "default": "" },

    "ctaText": { "type": "string", "default": "" },
    "ctaUrl": { "type": "string", "default": "" },
    "ctaTarget": { "type": "string", "enum": ["", "_blank"], "default": "" },

    "items": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "default": "" },
          "text": { "type": "string", "default": "" },
          "iconUrl": { "type": "string", "default": "" }
        },
        "additionalProperties": false
      }
    },
    "theme": { "type": "string", "enum": ["light", "dark"], "default": "light" }
  }
}
